@model UENValidateProj.Models.UENInput

<h2>UEN Validity Check</h2>
<form asp-action="Index" asp-controller="UENInput" method="post" class="mt-3">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label asp-for="BusinessReg" class="form-label"></label>
        <input asp-for="BusinessReg" class="form-control" />
        <span asp-validation-for="BusinessReg" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LocalCompany" class="form-label"></label>
        <input asp-for="LocalCompany" class="form-control" />
        <span asp-validation-for="LocalCompany" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="OtherEntity" class="form-label"></label>
        <input asp-for="OtherEntity" class="form-control" />
        <span asp-validation-for="OtherEntity" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@if (!string.IsNullOrWhiteSpace(ViewBag.Message as string))
{
    <div class="card mt-4 border-success">
        <div class="card-header bg-success text-white">
            âœ… Validation Result
        </div>
        <div class="card-body">
            <p class="card-text">@ViewBag.Message</p>
        </div>
    </div>
}

